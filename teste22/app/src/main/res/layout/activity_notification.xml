<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification_feature.Notification">

    <Button
        android:id="@+id/reply_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="199dp"
        android:text="Viajantes proximo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/basic_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="Mensagens"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/extend_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Promoção perto"
        app:layout_constraintStart_toStartOf="@+id/action_notification"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/action_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Solicitação de amizade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="21dp"
        android:text="Notificação Básica"
        app:layout_constraintBottom_toTopOf="@+id/reply_notification"
        app:layout_constraintStart_toStartOf="@+id/reply_notification" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:text="Notificação com Reply"
        app:layout_constraintStart_toStartOf="@+id/reply_notification"
        app:layout_constraintTop_toBottomOf="@+id/reply_notification" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="2dp"
        android:text="Notificação Expandida "
        app:layout_constraintEnd_toEndOf="@+id/extend_notification"
        app:layout_constraintTop_toBottomOf="@+id/basic_notification" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="6dp"
        android:text="Notificação com ação"
        app:layout_constraintEnd_toEndOf="@+id/extend_notification"
        app:layout_constraintTop_toBottomOf="@+id/extend_notification" />

</androidx.constraintlayout.widget.ConstraintLayout>