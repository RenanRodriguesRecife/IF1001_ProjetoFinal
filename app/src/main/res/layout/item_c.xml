<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#131313"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Evento"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="11dp" />

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data do Início, - dada do Fim"
            android:textColor="#FFF"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="38dp" />

        <TextView
            android:id="@+id/edereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Rua, Número - Bairro"
            android:textColor="#FFF"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="57dp" />

        <TextView
            android:id="@+id/cidadeEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cidade - Estado"
            android:textColor="#FFF"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="76dp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="1dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFF"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="327dp"
            tools:layout_editor_absoluteY="5dp"
            tools:text="20" />

        <TextView
            android:id="@+id/mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="337dp"
            tools:layout_editor_absoluteY="44dp"
            tools:text="Jun" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>